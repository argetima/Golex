@model Pizza.Models.Order

@{
    ViewBag.Title = "Address And Payment";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container">
    <div id="site-wrapper" class="body-content" style="padding-left:20px">
        <form action="/Checkout/AddressAndPayment" method="post" enctype="multipart/form-data">
                <h2>Address And Payment</h2>
                <div class="form-group">
                    <fieldset>
                        <label for="adress">Shipping Information (Registered Address)</label>
                        <textarea name="Address" class="form-control" rows="3">@Model.Address</textarea>
                    </fieldset>
                    <fieldset>
                        <label for="Phone">Phone</label>
                        <input type="text" name="Phone" class="form-control" value="@Model.Phone" disabled/>
                    </fieldset>
                    <fieldset>
                        <label for="Phone">Email</label>
                        <input type="text" name="Email" class="form-control" value="@Model.Email" disabled />
                    </fieldset>
                    <br />
                    <input type="submit" value="Submit Order" class="btn btn-primary"/>
                    <br /><br />
                </div>
        </form>
    </div>
</div>